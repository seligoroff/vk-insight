APP_NAME="VK Insight"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database Configuration
# По умолчанию используется SQLite (database/database.sqlite)
# Для использования MySQL/PostgreSQL раскомментируйте и настройте соответствующие параметры
DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=forge
# DB_USERNAME=forge
# DB_PASSWORD=

# VK API Configuration
# Обязательный параметр - токен доступа VK API
# Получить можно на https://vk.com/dev
VK_TOKEN=

# Версия VK API (по умолчанию: 5.122)
VK_API_VERSION=5.122

# Проверка SSL сертификатов (false для локальной разработки, true для production)
VK_VERIFY_SSL=false

# Базовый URL аккаунта для генерации ссылок на посты
# Пример: https://vk.com/seligoroff
VK_ACCOUNT_BASE_URL=https://vk.com

# Таймзона для аналитики (vk:analytics)
# Если не указано, используется APP_TIMEZONE или UTC
# Для российских групп рекомендуется: Europe/Moscow
VK_ANALYTICS_TIMEZONE=

# Application Timezone
# Таймзона приложения (по умолчанию: UTC)
APP_TIMEZONE=UTC

# Broadcast & Cache
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis (опционально, если используется)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail (опционально)
# MAIL_MAILER=smtp
# MAIL_HOST=mailhog
# MAIL_PORT=1025
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null
# MAIL_FROM_ADDRESS="hello@example.com"
# MAIL_FROM_NAME="${APP_NAME}"
